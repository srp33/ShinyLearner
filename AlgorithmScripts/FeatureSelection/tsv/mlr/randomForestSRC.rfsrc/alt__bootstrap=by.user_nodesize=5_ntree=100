#!/bin/bash

set -euo pipefail

#######################################################################################
# This algorithm is implemented in the mlr software package (http://mlr-org.github.io).
#######################################################################################

dataFilePath="$1"
numCores="$2"
verbose="$3"

Rscript --no-save --no-restore --no-site-file --no-init-file --no-environ --max-ppsize=500000 AlgorithmScripts/Helper/mlr_f_generic.R "$dataFilePath" "$numCores" "'randomForestSRC.rfsrc', ntree = 100, bootstrap = 'by.user', nodesize=5" 2>&1 | python3 AlgorithmScripts/Helper/ReformatMlrFeatureSelectionOutput.py "$verbose"
